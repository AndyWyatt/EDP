<Window x:Class="EDP.EDP07Silly.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EDP.EDP07Silly"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <Label FontSize="27" HorizontalContentAlignment="Center">Are you silly?</Label>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Name="butNo" MouseEnter="butNo_MouseEnter" FontSize="30">No</Button>
                <Button Name="butYes" Click="butYes_Click" FontSize="30">Yes</Button>
                <Button Name="butMaybe" MouseEnter="butMaybe_MouseEnter" FontSize="30">Maybe</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
